---
import { SEO as AstroSEO } from 'astro-seo'
import { Seo } from '@/types/metadata/Seo'
import { siteConfig } from '@/config/siteConfig'

type Props = Seo

const {
    title,
    description,
    charset,
    canonical,
    noindex,
    image,
    nofollow,
    openGraph,
    twitter,
}: Seo = Astro.props

const openGraphMain = {
    basic: {
        title: openGraph?.basic?.title ?? title ?? siteConfig.title,
        type: openGraph?.basic?.type ?? 'website',
        image: image?.src ?? `${Astro.url.origin}/opengraph.jpg`,
        url: canonical,
    },
    optional: {
        description: description ?? siteConfig.description,
        siteName: siteConfig.title,
    },
}

const twitterMain = {
    card: 'summary_large_image',
    site: null,
    creator: null,
    image: image?.src ?? '',
    imageAlt: image?.alt ?? '',
    description: description ?? siteConfig.description,
}
---

<AstroSEO
    title={title}
    titleTemplate={`%s - ${siteConfig.title}`}
    titleDefault={siteConfig.title}
    description={description ?? siteConfig.description}
    canonical={canonical}
    noindex={noindex}
    nofollow={nofollow}
    charset={charset}
    openGraph={openGraphMain}
/>
