---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Hero from '@/components/PageElements/Hero.astro'
import Features from '@/components/PageElements/Features.astro'
import FeaturedPosts from '@/components/PageElements/FeaturedWork.astro'

const seo = {
    title: null,
    description: null,
    image: '',
    canonical: Astro.url.href,
}
---

<BaseLayout seo={seo}>
    <Hero
        title="Hi, I'm Jonathan Falcon"
        subtitle="You need someone who's flexible enough to run the analyses and also effectively communicate the results."
    />

    <Features
        title='Why me?'
        subtitle="You need someone who's flexible enough to run the analyses and also effectively communicate the results."
        features={[
            {
                title: 'Quant + Qual',
                description:
                    'A unique blend of quantitative and qualitative skills allow a holistic and defensible understanding of the problem.',
                icon: 'ph:magnifying-glass-bold',
            },
            {
                title: 'Curious',
                description:
                    "Ever wonder how something works? Knowing how something works is sometimes just as important, and that's exactly what drives me.",
                icon: 'ph:brain-bold',
            },
            {
                title: 'Resourceful',
                description:
                    'No data? No problem. I strive to make the fullest use of resources at hand, so I can always accomplish my goal.',
                icon: 'mdi:lightbulb-on',
            },
            {
                title: 'Multidisciplinary',
                description:
                    'A unique blend of economics, finance, and marketing create a unique yet harmonic perspective and method of problem-solving.',
                icon: 'ph:stack-fill',
            },
        ]}
    />

    <FeaturedPosts
        title='Check out some of my work'
        subtitle='See more'
        work={[
            'Personal Site',
            '2022 McCombs Marketing Challenge',
            'Cleaning the Iowa Liquor Sales Dataset',
        ]}
    />
</BaseLayout>
